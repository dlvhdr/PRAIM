    <Window.Resources>
        <ResourceDictionary>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Help">
                <MenuItem Header="User Manual"/>
                <MenuItem Header="About"/>
            </MenuItem>
        </Menu>
        <TabControl DockPanel.Dock="Top" SelectedIndex="0">
            <!--Snapshot tab-->
            <TabItem Padding="4,2">
                <TabItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Margin="5,0" Source="{StaticResource CameraIcon}" Style="{StaticResource Icon16x16}"/>
                        <TextBlock Grid.Column="1" DockPanel.Dock="Left" Text="Snapshot" VerticalAlignment="Center" TextAlignment="Center" HorizontalAlignment="Stretch"/>
                    </Grid>
                </TabItem.Header>

                <Grid Margin="5,5,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="250"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!--Metadata-->
                    <Grid Grid.Row="0" Grid.Column="0" Grid.IsSharedSizeScope="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" SharedSizeGroup="Labels"/>
                            <RowDefinition Height="Auto" SharedSizeGroup="Labels"/>
                            <RowDefinition Height="Auto" SharedSizeGroup="Labels"/>
                            <RowDefinition Height="Auto" SharedSizeGroup="Labels"/>
                            <RowDefinition Height="Auto" SharedSizeGroup="Labels"/>
                            <RowDefinition Height="Auto" SharedSizeGroup="Labels"/>
                            <RowDefinition Height="Auto"/>

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="110"/>
                        </Grid.ColumnDefinitions>

                        <Grid.Resources>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Margin" Value="0,2,5,2"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                            <Style TargetType="{x:Type TextBox}">
                                <Setter Property="Margin" Value="2,2"/>
                            </Style>
                        </Grid.Resources>

                        <!--Date-->
                        <TextBlock Grid.Row="0" Text="Date:"/>
                        <DatePicker Margin="2,2" Padding="1" Grid.Row="0" Grid.Column="1" />

                        <!--Time-->
                        <TextBlock Grid.Row="1" Text="Time:"/>
                        <Label Grid.Row="1" Grid.Column="1" Content="{Binding Time}" Padding="0" Margin="2,2">
                            <Label.ContentStringFormat>
                                hh\:mm\:ss
                            </Label.ContentStringFormat>
                        </Label>

                        <!--Comments-->
                        <TextBlock Grid.Row="2" Text="Comments:"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Comments, Mode=TwoWay}"/>

                        <!--Priority-->
                        <TextBlock Grid.Row="3" Text="Priority:"/>
                        <ComboBox Grid.Row="3" Grid.Column="1" Margin="2,2" ItemsSource="{Binding PossiblePriorities}" Padding="2,1" SelectedItem="{Binding Priority}"/>

                        <!--Version-->
                        <TextBlock Grid.Row="4" Text="Version:"/>
                        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Version}"/>

                        <!--Project ID-->
                        <TextBlock Grid.Row="5" Text="Project ID:"/>
                        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding ProjectID}"/>

                        <DockPanel Grid.Row="6" Grid.Column="1" Margin="2,10,2,0">
                            <!--Take snapshot button-->
                            <Button DockPanel.Dock="Top" Padding="5" Click="OnTakeSnapshot" Margin="0,0,0,7">
                                Take Snapshot
                            </Button>
                            <!--Save button-->
                            <Button DockPanel.Dock="Top" Padding="5" Click="OnSave">
                                Save
                            </Button>
                        </DockPanel>
                    </Grid>

                    <!--The snapshot-->
                    <Grid Grid.Row="0" Grid.Column="1" Margin="20,0,5,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Label Content="Preview" FontWeight="Bold" Margin="0" Padding="0"/>

                        <Border Grid.Row="1" Grid.Column="1" Width="370" Height="212"  BorderBrush="LightBlue" BorderThickness="2">
                            <Image Source="{Binding CroppedImage}" Stretch="Uniform"/>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <!--Seach db tab-->
            <TabItem Padding="4,2">
                <TabItem.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Margin="5,0" Source="{StaticResource DBIcon}" Style="{StaticResource Icon16x16}"/>
                        <TextBlock Grid.Column="1" Text="Search DB" VerticalAlignment="Center" TextAlignment="Center" HorizontalAlignment="Stretch"/>
                    </Grid>
                </TabItem.Header>

                <Grid Margin="5,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--Search parameters-->
                    <Grid Grid.IsSharedSizeScope="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" SharedSizeGroup="Labels"/>
                            <RowDefinition Height="Auto" SharedSizeGroup="Labels"/>
                            <RowDefinition Height="Auto" SharedSizeGroup="Labels"/>
                            <RowDefinition Height="Auto" SharedSizeGroup="Labels"/>
                            <RowDefinition Height="Auto" SharedSizeGroup="Labels"/>
                            <RowDefinition Height="Auto" SharedSizeGroup="Labels"/>
                            <RowDefinition Height="Auto"/>

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="110"/>
                        </Grid.ColumnDefinitions>

                        <Grid.Resources>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Margin" Value="0,2,5,2"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                            <Style TargetType="{x:Type TextBox}">
                                <Setter Property="Margin" Value="2,2"/>
                            </Style>
                        </Grid.Resources>

                        <!--Date-->
                        <TextBlock Grid.Row="0" Text="Date:"/>
                        <DatePicker Margin="2,2" Padding="1" Grid.Row="0" Grid.Column="1" />

                        <!--Time-->
                        <TextBlock Grid.Row="1" Text="Time:"/>
                        <TextBox Grid.Row="1" Grid.Column="1"/>

                        <!--Comments-->
                        <TextBlock Grid.Row="2" Text="Comments:"/>
                        <TextBox Grid.Row="2" Grid.Column="1"/>

                        <!--Priority-->
                        <TextBlock Grid.Row="3" Text="Priority:"/>
                        <TextBox Grid.Row="3" Grid.Column="1"/>

                        <!--Version-->
                        <TextBlock Grid.Row="4" Text="Version:"/>
                        <TextBox Grid.Row="4" Grid.Column="1"/>

                        <!--Project ID-->
                        <TextBlock Grid.Row="5" Text="Project ID:"/>
                        <TextBox Grid.Row="5" Grid.Column="1"/>

                        <!--Take snapshot button-->
                        <Button Grid.Row="6" Grid.Column="1" Margin="2,20,2,0" Padding="5">
                            Search
                        </Button>
                    </Grid>

                    <Grid Grid.Column="1" Margin="20,0,5,5">
                        <DataGrid ItemsSource="{Binding DummyDBItems, ElementName=self}" AutoGenerateColumns="False" CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Date" Binding="{Binding DateTime}">
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Priory" Binding="{Binding Priority}">
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Version" Binding="{Binding Version}">
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Comments" Binding="{Binding Comments}">
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                </Grid>

            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
