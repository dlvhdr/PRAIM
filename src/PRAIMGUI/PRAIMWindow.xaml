<Window x:Class="PRAIM.PRAIMWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PRAIM - Project Action Items Manager" Height="300" Width="500">
    <Window.Resources>
        <ResourceDictionary Source="ImagesDictionary.xaml"/>
    </Window.Resources>
    
    <DockPanel LastChildFill="True">
        <TabControl DockPanel.Dock="Top" SelectedIndex="0">
            <!--Snapshot tab-->
            <TabItem Padding="4,2">
                <TabItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Image Grid.Column="0" Margin="5,0" Source="{StaticResource CameraIcon}" Style="{StaticResource Icon16x16}"/>
                        <TextBlock Grid.Column="1" DockPanel.Dock="Left" Text="Snapshot" VerticalAlignment="Center" TextAlignment="Center" HorizontalAlignment="Stretch"/>
                    </Grid>
                </TabItem.Header>

                <Grid DockPanel.Dock="Left" Margin="5,5,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" SharedSizeGroup="Labels"/>
                            <RowDefinition Height="Auto" SharedSizeGroup="Labels"/>
                            <RowDefinition Height="Auto" SharedSizeGroup="Labels"/>
                            <RowDefinition Height="Auto" SharedSizeGroup="Labels"/>
                            <RowDefinition Height="Auto" SharedSizeGroup="Labels"/>
                            <RowDefinition Height="Auto" SharedSizeGroup="Labels"/>
                            <RowDefinition Height="Auto" SharedSizeGroup="Labels"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Date:" Margin="0,2"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Margin="2,2"/>
                        <TextBlock Grid.Row="1" Text="Time:" Margin="0,2"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Margin="2,2"/>
                        <TextBlock Grid.Row="2" Text="Comments:" Margin="0,2"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Margin="2,2"/>
                        <TextBlock Grid.Row="3" Text="Priority:" Margin="0,2"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Margin="2,2"/>
                        <TextBlock Grid.Row="4" Text="Version:" Margin="0,2"/>
                        <TextBox Grid.Row="4" Grid.Column="1" Margin="2,2" Text="{Binding Version}"/>
                        <TextBlock Grid.Row="5" Text="Project ID:" Margin="0,2"/>
                        <TextBox Grid.Row="5" Grid.Column="1" Margin="2,2"/>
                    </Grid>
                </Grid>

            </TabItem>

            <!--Seach db tab-->
            <TabItem Padding="4,2">
                <TabItem.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Margin="5,0" Source="{StaticResource DBIcon}" Style="{StaticResource Icon16x16}"/>
                        <TextBlock Grid.Column="1" Text="Search DB" VerticalAlignment="Center" TextAlignment="Center" HorizontalAlignment="Stretch"/>
                    </Grid>
                </TabItem.Header>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
