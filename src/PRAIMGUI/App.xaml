<Application x:Class="PRAIM.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ImagesDictionary.xaml"/>
                <ResourceDictionary Source="Styles/ComboBoxes.xaml"/>
                <ResourceDictionary Source="Styles/GroupBoxes.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <SolidColorBrush x:Key="SmokeGray" Color="#32353a" />

            <SolidColorBrush x:Key="SmokeGreen" Color="#99ba57" />

            <SolidColorBrush x:Key="SmokeBlue" Color="#4b8dc4" />

            <SolidColorBrush x:Key="LightSmokeGray" Color="#86868a" />

            <Style TargetType="{x:Type Button}" x:Key="RectangleButtonStyle">
                <Setter Property="Padding" Value="5"/>
                <Setter Property="Width" Value="100"/>
                <Setter Property="Height" Value="32"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
